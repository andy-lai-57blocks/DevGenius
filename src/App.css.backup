@media (min-width: 1200px) {
  .content-container {
    max-width: 1600px;
  }
  
  .tools-grid {
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
  }
  
  .category-tools-grid {
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
  }
}

/* Extra Large Desktop (1600px and up) */
@media (min-width: 1600px) {
  .content-container {
    max-width: 1800px;
  }
  
  .main-content {
    padding: 3rem;
  }
  
  .tool-container {
    padding: 3.5rem;
  }
  
  .tools-grid {
